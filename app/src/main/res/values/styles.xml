<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@android:color/white</item> <!-- Use a white color as the background -->
    </style>
    <style name="CustomTextAppearance">
        <item name="android:fontFamily">@font/audiowide</item> <!-- Use your custom font -->
        <item name="android:textSize">16sp</item> <!-- Specify the text size -->
        <item name="android:textColor">#333333</item> <!-- Specify the text color -->
    </style>
    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:screenOrientation">portrait</item>
    </style>
</resources>